<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.Audition"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:onClick="back"
        android:background="@color/accent"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:text="Listening"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="@font/fredoka_condensed_bold"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:text="cucumber"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/fredoka_variable_font_wdth_wght"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:text="[ 'kju:kʌmbə ]"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>

        <TextView
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_base"
            android:text="Please press button and say this word. Our service will check your pronunciation "
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textAlignment="center"
            android:letterSpacing="0.01"/>

        <Button
            android:id="@+id/button_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_base"
            android:textColor="@color/text_accent"
            android:textAllCaps="false"
            android:onClick="guess"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="24sp"
            android:padding="16sp"
            android:layout_marginTop="24sp"
            android:text="Check"
            />


    </LinearLayout>

</LinearLayout>