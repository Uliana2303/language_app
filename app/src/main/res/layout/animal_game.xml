<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.AnimalGame"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:background="@color/accent"
        android:onClick="back"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:text="Guess the animal"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/racoon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32sp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:textColor="@color/text_base"
                android:text="Guess who is on image"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_base"
                android:background="@drawable/usable_light"
                android:padding="18sp"
                android:textSize="15sp"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/button_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_base"
            android:textColor="@color/text_accent"
            android:textAllCaps="false"
            android:onClick="guess"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="24sp"
            android:padding="16sp"
            android:layout_margin="12sp"
            android:text="Check" />

    </LinearLayout>

</LinearLayout>