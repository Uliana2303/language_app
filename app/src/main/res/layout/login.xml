<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.Login"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:background="@color/accent"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:text="Login"
            android:textAlignment="center"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="For free, join now and\nstart learning"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:letterSpacing="0.01"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:text="Email Address"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColor="@color/text_base"
            android:background="@drawable/usable_light"
            android:padding="18sp"
            android:textSize="15sp"
            android:textColorHint="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:text="Password"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />
        <EditText
            android:id="@+id/EditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text_base"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/next"
            android:inputType="textPassword"
            android:textColor="@color/text_base"
            android:background="@drawable/usable_light"
            android:padding="18sp"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textColor="@color/required"
            android:text="Forgot Password"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="32sp">

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_base"
            android:textColor="@color/text_accent"
            android:textAllCaps="false"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="24sp"
            android:onClick="login"
            android:padding="16sp"
            android:layout_margin="12sp"
            android:text="Login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:onClick="register"
            android:textFontWeight="400"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/google_for"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:textSize="15sp"
            android:onClick="login"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textFontWeight="400"/>
    </LinearLayout>

</LinearLayout>