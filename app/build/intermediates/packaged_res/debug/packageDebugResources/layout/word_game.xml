<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.WordGame"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:onClick="back"
        android:background="@color/accent"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:text="Word practice"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="@font/fredoka_condensed_bold"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:text="gardener"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/fredoka_variable_font_wdth_wght"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:text="[ 'gɑ:dnə ]"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32sp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_inactive"
                android:textColor="@color/text_base"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:textSize="22sp"
                android:textAlignment="center"
                android:text="Муха"
                android:padding="19sp"
                android:textAllCaps="false"
                android:layout_marginTop="12sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_inactive"
                android:textColor="@color/text_base"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:textSize="22sp"
                android:textAlignment="center"
                android:text="Садовник"
                android:padding="19sp"
                android:textAllCaps="false"
                android:layout_marginTop="12sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_inactive"
                android:textColor="@color/text_base"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:textSize="22sp"
                android:textAlignment="center"
                android:text="Гладиолус"
                android:padding="19sp"
                android:textAllCaps="false"
                android:layout_marginTop="12sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_inactive"
                android:textColor="@color/text_base"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:textSize="22sp"
                android:textAlignment="center"
                android:text="Собака"
                android:padding="19sp"
                android:textAllCaps="false"
                android:layout_marginTop="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/button_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_base"
                android:textColor="@color/text_accent"
                android:textAllCaps="false"
                android:onClick="choose"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:textSize="24sp"
                android:padding="16sp"
                android:text="Check"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>