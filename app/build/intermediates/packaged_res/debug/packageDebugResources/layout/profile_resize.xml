<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.ProfileResize"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_resize">
    
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:background="@color/accent"
        android:title="Your photo is gorgeous!"
        android:titleTextAppearance="@style/toolbar_style"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="fill"
        android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Just resize that photo\nfor fit in square"
            android:textColor="@color/text_accent"
            android:textSize="22sp"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/resize"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <Button
                android:id="@+id/button_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_base"
                android:padding="10sp"
                android:onClick="use"
                android:text="Use that image"
                android:textColor="@color/text_accent"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:letterSpacing="0.01"
                android:layout_marginRight="24sp"
                android:layout_marginLeft="24sp"
                android:layout_marginBottom="24sp"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>