<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.SelectLanguage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:background="@color/accent"
        android:title="Language select"
        android:titleTextAppearance="@style/toolbar_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="What is your Mother language?"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_orange"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:text="Russian"
            android:padding="19sp"
            android:textAllCaps="false"
            android:layout_marginTop="12sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_light"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:text="English"
            android:padding="19sp"
            android:textAllCaps="false"
            android:layout_marginTop="12sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_light"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:text="Chinese"
            android:padding="19sp"
            android:textAllCaps="false"
            android:layout_marginTop="12sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_light"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:text="Belarus"
            android:padding="19sp"
            android:textAllCaps="false"
            android:layout_marginTop="12sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_light"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:text="Kazakh"
            android:padding="19sp"
            android:textAllCaps="false"
            android:layout_marginTop="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_choose_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_base"
                android:padding="10sp"
                android:text="Choose"
                android:onClick="login"
                android:textColor="@color/text_accent"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:letterSpacing="0.01"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
