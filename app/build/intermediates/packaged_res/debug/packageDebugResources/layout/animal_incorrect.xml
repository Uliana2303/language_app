<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.AnimalGameCorrect"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:background="@color/usable_red"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:onClick="back"
            android:text="Guess the animal"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ˜¿"
            android:textSize="160sp"
            android:textAlignment="center"
            android:textColor="@color/text_base"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_base"
            android:text="Eh? Wrong answer :(\nThat is: Racoon"
            android:textSize="20sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textAlignment="center"
            android:layout_marginTop="32sp"
            android:layout_marginBottom="32sp"/>


        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_base"
            android:textColor="@color/text_accent"
            android:textAllCaps="false"
            android:onClick="next"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="24sp"
            android:padding="16sp"
            android:layout_margin="12sp"
            android:text="Next" />
        <Button
            android:id="@+id/button_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_base"
            android:textColor="@color/text_accent"
            android:textAllCaps="false"
            android:onClick="try_again"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="24sp"
            android:padding="16sp"
            android:layout_margin="12sp"
            android:text="Try again" />

    </LinearLayout>

</LinearLayout>