<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.RegisterPassword"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:background="@color/accent"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        android:onClick="back"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:text="Signup"
            android:textAlignment="center"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Create an Account"
            android:textColor="@color/text_base"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:letterSpacing="0.01"
            android:layout_marginTop="40sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:text="Password"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="*******"
            android:textColor="@color/text_base"
            android:background="@drawable/usable_light"
            android:padding="18sp"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:text="Confirm Password"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="*******"
            android:textColor="@color/text_base"
            android:background="@drawable/usable_light"
            android:padding="18sp"
            android:textSize="15sp"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="142sp">

        <Button
            android:id="@+id/button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/usable_base"
            android:textColor="@color/text_accent"
            android:textAllCaps="false"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="24sp"
            android:onClick="register"
            android:padding="16sp"
            android:layout_margin="12sp"
            android:text="Signup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:textSize="15sp"
            android:onClick="login"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:letterSpacing="0.01"
            android:textFontWeight="400"/>
    </LinearLayout>

</LinearLayout>