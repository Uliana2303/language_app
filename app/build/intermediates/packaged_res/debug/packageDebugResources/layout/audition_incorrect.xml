<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.AuditionIncorrect"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:onClick="back"
        android:background="@color/accent"
        android:navigationIcon="@drawable/back_arrow"
        android:nestedScrollingEnabled="false"
        android:titleTextAppearance="@style/toolbar_style"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:layout_marginRight="66sp"
            android:text="Listening"
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textFontWeight="500"
            android:letterSpacing="0.01"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="@font/fredoka_condensed_bold"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:text="cucumber"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/fredoka_variable_font_wdth_wght"
            android:letterSpacing="0.01"
            android:textColor="@color/text_base"
            android:textAlignment="center"
            android:text="[ 'kju:kʌmbə ]"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"/>

        <TextView
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_base"
            android:text="Please press button and say this word. Our service will check your pronunciation "
            android:fontFamily="@font/fredoka_condensed_medium"
            android:textSize="22sp"
            android:textAlignment="center"
            android:letterSpacing="0.01"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32sp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:textColor="@color/text_base"
                android:text="Your result"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/usable_red"
                android:background="@drawable/usable_light"
                android:padding="18sp"
                android:textSize="15sp"
                android:text="pupumber"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="50sp">

            <Button
                android:id="@+id/button_listen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/usable_green"
                android:textColor="@color/text_accent"
                android:textAllCaps="false"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:textSize="100sp"
                android:onClick="guess"
                android:padding="16sp"
                android:layout_gravity="center"
                android:text="🎙️"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>